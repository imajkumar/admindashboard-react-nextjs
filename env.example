# API Configuration
NEXT_PUBLIC_API_URL=https://fakeapi.platzi.com/en/rest/auth-jwt
NEXT_PUBLIC_API_TIMEOUT=10000

# App Configuration
NEXT_PUBLIC_APP_NAME=Admin Dashboard
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_COMPANY_NAME=Your Company

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_SENTRY=false

# External Services
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_GA_ID=

# Security (Server-side only)
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-super-secret-session-key-here

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Pagination
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Cache
NEXT_PUBLIC_CACHE_TTL=300000

# Real-time
NEXT_PUBLIC_ENABLE_WEBSOCKET=false
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8000/ws

# Logging
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_ENABLE_CONSOLE_LOG=true

# Performance
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1
